<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App1.TestPage2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer x:Name="MainScrollViewer"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  ZoomMode="Disabled"
                  Background="LightGray">
        <!-- Blue Box Container - Always at top -->
        <Grid x:Name="MainGrid"
              HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Orientation="Vertical" 
                        SizeChanged="panel0_size_changed"
                        HorizontalAlignment="Stretch">
                <Rectangle x:Name="BlueBox"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Top"
                       Margin="10,10,20,10"
                       Fill="Blue"
                       Height="{x:Bind BoxHeight, Mode=OneWay}"/>
            </StackPanel>

            <!-- Content Area -->
            <StackPanel Grid.Row="1" Orientation="Vertical" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Top" 
                            Margin="16">
                <TextBlock Text="Test Page 2 - Dynamic Layout" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Margin="0,0,0,16" />

                <TextBlock Text="• Entire page is now scrollable for better usability" 
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="DarkGreen"
                               Margin="16,0,0,16" />

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Current Aspect Ratio: " 
                                   FontSize="14"
                                   FontWeight="SemiBold" />
                    <TextBlock Text="{x:Bind CurrentAspectRatio, Mode=OneWay}" 
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="Blue" />
                </StackPanel>

                <Border Background="LightBlue"
                            CornerRadius="4"
                            Padding="8"
                            Margin="0,8,0,0">
                    <TextBlock x:Name="StatusTextBlock" 
                                   Text="{x:Bind StatusText, Mode=OneWay}" 
                                   FontSize="12"
                                   Foreground="DarkBlue"
                                   FontWeight="SemiBold" />
                </Border>

                <!-- Additional content to demonstrate scrolling -->
                <TextBlock Text="Additional Information" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0,24,0,12" />

                <TextBlock Text="This scrollable layout ensures that all content remains accessible even when the blue box takes up significant space in landscape mode. Users can scroll to view all content without any part being cut off." 
                               FontSize="14"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12" />

                <TextBlock Text="The ScrollViewer is configured with:" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8" />

                <TextBlock Text="• VerticalScrollBarVisibility: Auto" 
                               FontSize="12"
                               Margin="16,0,0,4" />

                <TextBlock Text="• HorizontalScrollBarVisibility: Auto" 
                               FontSize="12"
                               Margin="16,0,0,4" />

                <TextBlock Text="• ZoomMode: Disabled" 
                               FontSize="12"
                               Margin="16,0,0,16" />

                <TextBlock Text="Try resizing the window to see how the layout adapts and remains scrollable!" 
                               FontSize="14"
                               FontStyle="Italic"
                               Foreground="DarkBlue"
                               Margin="0,8,0,32" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
